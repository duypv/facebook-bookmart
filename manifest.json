{
  "manifest_version": 3,
  "name": "Facebook Bookmark Extension",
  "version": "1.0",
  "description": "Allows users to bookmark Facebook posts.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "clipboardRead"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["content.js"]
    }
  ]
}